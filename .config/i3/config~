bindsym $mod+d exec i3-dmenu-desktop --dmenu='rofi -dmenu -show run -lines 13 -eh 1 -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 18"'


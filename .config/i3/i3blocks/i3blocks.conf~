# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

[cpulevels]
#command=$LOCAL_DIR/cpu-levels
command=./cpu-levels
interval=repeat
color=#ffffff
border=#62ef3b
border_right=0
border_left=0
border_top=0
kborder_bottom=1
markup=pango

#[time]
#command=date '+%Y-%m-%d %H:%M:%S'
#interval=1
#color=#A4C2F4

[calendar]
command=./calendar
interval=1
LABEL= 
#DATEFMT=+%H:%M:%S
DATEFMT=+%Y-%m-%d %H:%M:%S
# SHORTFMT=+%H:%M:%S
HEIGHT=180
WIDTH=220

[memory]
command=./memory
label=MEM: 
interval=30

[memory]
command=./memory
label=SWAP: 
instance=swap
interval=30


[battery]
command=./battery
interval=3
color=#a4c2f4
label=Battery: 

[wifi]
command=./wifi
label=Wifi: 
#INTERFACE=wlo1
interval=30
color=#a4c2f4

[bandwidth3]
command=./bandwidth3
interval=persist
markup=pango
LABEL=<span font='FontAwesome'>&#xf1eb;</span>
#IFACE=[automatically determined]
#DT=3
#UNIT=Mb
# Exposed variables: rx, wx, tx, unit, iface
#PRINTF_COMMAND=printf "${LABEL}%-5.1f/%5.1f %s/s\n", rx, wx, unit;
color=#a4c2f4

[volume]
command=./volume
markup=pango
LABEL=<span font='FontAwesome'>&#xf491;</span>
interval=once
signal=10
#STEP=5%
MIXER=default
#SCONTROL=[determined automatically]

[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
markup=pango
LABEL=<span font='FontAwesome'>&#xf6ad;</span>
interval=3600
color=#A4C2F4

[aur-update]
command=./aur-update
markup=pango
LABEL=<span font='FontAwesome'>&#xf0ad;</span>
interval=43200
UPDATE_COLOR=red
QUIET=1
IGNORE=root vidyodesktop


# Colors (generated theme preferred, fallback to tput)
if [ -f ~/.config/.colors ]; then
    # shellcheck disable=SC1091
    source ~/.config/.colors
fi

if [ -n "${THEME_ACCENT_START:-}" ] && [ -n "${THEME_RESET:-}" ]; then
    PS1="${THEME_ACCENT_START} \h:\u \w ${THEME_RESET}> "
else
    GREEN="\[$(tput setaf 2)\]"
    RESET="\[$(tput sgr0)\]"
    PS1="${GREEN} \h:\u \w ${RESET}> "
fi

source ~/.exports

export PATH=$PATH:~/bin

### Pip
export PIP_REQUIRE_VIRTUALENV='true'

# pudb breakpoint()
export PYTHONBREAKPOINT="pudb.set_trace"

export MANPAGER='nvim +Man!'
export MANWIDTH=999

# ssh
if [ -z "$SSH_AUTH_SOCK" ] ; then
    eval `ssh-agent`
    ssh-add
fi
